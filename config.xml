<?xml version='1.0' encoding='utf-8'?>
<widget id="com.super.application" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>SuperApplication</name>
    <description>SuperApplication description</description>
    <author email="zmigpost@gmail.com">
        The ZMI (Zaytsev Michail Ivanovich)
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="*" />
    <allow-navigation href="*" />
    <platform name="android">
        <preference name="KeepRunning" value="true"/>
        <preference name="AndroidInsecureFileModeEnabled" value="true" />
        <preference name="AndroidPersistentFileLocation" value="Internal" />
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <preference name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,root" />

        <icon density="ldpi" src="www/img/cordova-icon/android/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="www/img/cordova-icon/android/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="www/img/cordova-icon/android/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="www/img/cordova-icon/android/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="www/img/cordova-icon/android/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="www/img/cordova-icon/android/drawable-xxxhdpi-icon.png" />

        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="www/img/cordova-screen/android/logo.png"/>
        <preference name="AndroidWindowSplashScreenBackground" value="#000000" />
    </platform>
</widget>
